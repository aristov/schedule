<main>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#link">Link</link></h1>
        <section>
            <link href="//yandex.ru">Simple</link>
        </section>
        <section>
            <link href="//google.ru" rel="external">External</link>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#button">Button</link></h1>
        <!--<section>
            <BUTTON>Native</BUTTON>
        </section>-->
        <section>
            <button>Simple</button>
        </section>
        <section>
            <button pressed="true">Pressed toggle button</button>
        </section>
        <section>
            <button disabled="true">Disabled</button>
        </section>
        <section>
            <button pressed="true" disabled="true">Pressed disabled toggle button</button>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#checkbox">Check box</link></h1>
        <!--<section>
            <label><input type="checkbox"/> Native</label>
        </section>-->
        <section>
            <checkbox name="checkbox" value="on">Simple</checkbox>
        </section>
        <section>
            <checkbox checked="true" name="checkbox-checked" value="on">Checked</checkbox>
        </section>
        <section>
            <checkbox disabled="true" name="checkbox-disabled" value="on">Disabled</checkbox>
        </section>
        <section>
            <checkbox checked="true" disabled="true" name="checkbox-checked-disabled" value="on">Checked disabled</checkbox>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#radiobutton">Radio group</link></h1>
        <!--<section>
            <span>
                <label>Native</label><br/>
                <label><input type="radio" name="native-radio"/> First</label>
                <label><input type="radio" name="native-radio"/> Second</label>
                <label><input type="radio" name="native-radio"/> Third</label>
            </span>
        </section>-->
        <section>
            <radiogroup name="radiogroup" label="Simple">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
        <section>
            <radiogroup name="radiogroup-checked" label="Checked">
                <radio value="first">First</radio>
                <radio value="second" checked="true">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
        <section>
            <radiogroup disabled="true" name="radiogroup-checked-disabled" label="Disabled">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio value="third" checked="true">Third</radio>
            </radiogroup>
        </section>
    </article>
    <article class="listboxstand">
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#Listbox">List box</link></h1>
        <!--<section>
            <label>
                Native<br/>
                <SELECT multiple="">
                    <OPTION>First</OPTION>
                    <OPTION>Second</OPTION>
                    <OPTION>Third</OPTION>
                </SELECT>
            </label>
        </section>-->
        <section>
            <listbox name="listbox" label="Simple">
                <option value="first">First option</option>
                <option value="second">Second option</option>
                <option value="third">Third option</option>
            </listbox>
        </section>
        <!--<section>
            <listbox multiselectable="true" name="listbox-multiselectable" label="Multiselectable">
                <option value="first">First option</option>
                <option value="second">Second option</option>
                <option value="third">Third option</option>
            </listbox>
        </section>-->
        <section>
            <listbox disabled="true" name="listbox-disabled" label="Disabled">
                <option value="first">First option</option>
                <option value="second" selected="true">Second option</option>
                <option value="third">Third option</option>
            </listbox>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#Listbox">Check list box</link></h1>
        <section>
            <listbox name="checklistbox" label="Simple">
                <option value="first" checked="false">First option</option>
                <option value="second" checked="false">Second option</option>
                <option value="third" checked="false">Third option</option>
            </listbox>
        </section>
        <section>
            <listbox disabled="true" name="checklistbox-disabled" label="Disabled">
                <option value="first" checked="false">First option</option>
                <option value="second" checked="true">Second option</option>
                <option value="third" checked="false">Third option</option>
            </listbox>
        </section>
    </article>
    <article>
        <h1>Text box</h1>
        <!--<section>
            <label>Native<br/><input/></label>
        </section>-->
        <section>
            <textbox label="Simple"/>
        </section>
        <section>
            <textbox value="Hover me" label="Has clear" hasclear="true"/>
        </section>
        <section>
            <textbox placeholder="Hint" label="Has placeholder"/>
        </section>
        <section>
            <textbox disabled="true" value="Unlock me" label="Disabled"/>
        </section>
    </article>
    <article>
        <h1>Text area</h1>
        <!--<section>
            <label>Native<br/><TEXTAREA></TEXTAREA></label>
        </section>-->
        <section>
            <textarea label="Simple"/>
        </section>
        <section>
            <textarea disabled="true" value="You know how" label="Disabled"/>
        </section>
    </article>
    <article>
        <h1>Password box</h1>
        <!--<section>
            <label>Native<br/><input type="password"/></label>
        </section>-->
        <section>
            <passwordbox label="Simple" value="secret"/>
        </section>
        <section>
            <passwordbox label="Disabled" disabled="true" value="secret"/>
        </section>
    </article>
    <article>
        <h1>Number box</h1>
        <!--<section>
            <label>Native<br/><input type="Number"/></label>
        </section>-->
        <section>
            <numberbox label="Simple"/>
        </section>
        <section>
            <numberbox label="Disabled" disabled="true"/>
        </section>
    </article>
    <article>
        <h1>Time box</h1>
        <!--<section>
            <label>Native<br/><input type="time"/></label>
        </section>-->
        <section>
            <timebox label="Simple"/>
        </section>
        <section>
            <timebox disabled="true" label="Disabled" value="22 : 23"/>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#datepicker">Date box</link></h1>
        <!--<section>
            <label>Native<br/><input type="date" value="2011-11-11"/></label>
        </section>-->
        <section>
            <datebox label="Simple" value="2016-06-12"/>
        </section>
        <section>
            <datebox disabled="true" label="Disabled" value="2016-06-12"/>
        </section>
    </article>
    <article>
        <h1>Search box</h1>
        <!--<section>
            <label>Native<br/><input type="Search"/></label>
        </section>-->
        <section>
            <searchbox label="Simple"/>
        </section>
        <section>
            <searchbox label="Request" value="Press ESC key"/>
        </section>
        <section>
            <searchbox label="Disabled" disabled="true"/>
        </section>
    </article>
    <article>
        <h1>Search group</h1>
        <!--<section>
            <label>Native<br/><input type="Search"/><BUTTON>Search</BUTTON></label>
        </section>-->
        <section>
            <searchgroup label="Simple"/>
        </section>
        <section>
            <searchgroup>
                <searchbox label="Accent"/>
                <button type="submit" mix="accent">Search</button>
            </searchgroup>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#combobox">Select box</link></h1>
        <!--<section>
            <label>
                Native<br/>
                <SELECT>
                    <OPTION>First</OPTION>
                    <OPTION>Second</OPTION>
                    <OPTION>Third</OPTION>
                </SELECT>
            </label>
        </section>-->
        <section>
            <selectbox label="Simple">
                <option checked="false" value="one">First option</option>
                <option checked="false" value="two">Second option</option>
                <option checked="false" value="three">Third option</option>
            </selectbox>
        </section>
        <section>
            <selectbox label="Checked">
                <option checked="false" value="one">First option</option>
                <option checked="true" value="two">Second option</option>
                <option checked="false" value="three">Third option</option>
            </selectbox>
        </section>
        <section>
            <selectbox label="Disabled" disabled="true">
                <option checked="false" value="one">First option</option>
                <option checked="true" value="two">Second option</option>
                <option checked="false" value="three">Third option</option>
            </selectbox>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#menubutton">Menu button</link></h1>
        <section>
            <menubutton controls="simplemenu">Simple menu</menubutton>
            <menu id="simplemenu">
                <menuitem>First menu item</menuitem>
                <menuitem>Second menu item</menuitem>
                <menuitem>Third menu item</menuitem>
            </menu>
        </section>
        <section>
            <menubutton controls="menuitemlinks">Menu item links</menubutton>
            <menu id="menuitemlinks">
                <menuitem href="//yandex.ru">First menu item</menuitem>
                <menuitem href="//google.com">Second menu item</menuitem>
                <menuitem href="//microsoft.com">Third menu item</menuitem>
            </menu>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#dialog_nonmodal">Dialog</link></h1>
        <section>
            <dialogbutton controls="simpledialog">Simple dialog</dialogbutton>
            <dialog id="simpledialog">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
            </dialog>
        </section>
        <section>
            <dialogbutton controls="assertivedialog">Assertive dialog</dialogbutton>
            <dialog id="assertivedialog" assertive="true">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
                <button type="close" mix="closebutton" title="Close dialog"/>
            </dialog>
        </section>
        <section>
            <dialogbutton controls="modaldialog">Modal dialog</dialogbutton>
            <dialog id="modaldialog" modal="true">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
            </dialog>
        </section>
        <section>
            <dialogbutton controls="assertivemodaldialog">Assertive modal dialog</dialogbutton>
            <dialog id="assertivemodaldialog" modal="true" assertive="true">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
                <button type="close" mix="closebutton" title="Close dialog"/>
            </dialog>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#tabpanel">Tab list</link></h1>
        <section>
            <tablist>
                <tab controls="tabpanel1" selected="true">One</tab>
                <tab controls="tabpanel2">Two</tab>
                <tab controls="tabpanel3">Three</tab>
            </tablist>
            <group view="tabpanelgroup">
                <tabpanel id="tabpanel1">1</tabpanel>
                <tabpanel id="tabpanel2" hidden="true">2</tabpanel>
                <tabpanel id="tabpanel3" hidden="true">3</tabpanel>
            </group>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#TreeView">Tree</link></h1>
        <tree>
            <treeitem expanded="true" label="First">
                <treeitem label="Nested 1"/>
                <treeitem label="Nested 2"/>
            </treeitem>
            <treeitem expanded="true" label="Second">
                <treeitem expanded="false" label="Nested 1">
                    <treeitem label="Subnested I"/>
                    <treeitem label="Subnested II"/>
                    <treeitem label="Subnested III"/>
                </treeitem>
                <treeitem label="Nested 2"/>
            </treeitem>
            <treeitem expanded="true" label="Third">
                <treeitem expanded="true" label="Nested 1">
                    <treeitem expanded="true" label="Subnested">
                        <treeitem label="Deepnested"/>
                    </treeitem>
                </treeitem>
                <treeitem expanded="false" label="Nested 2">
                    <treeitem label="Subnested"/>
                </treeitem>
            </treeitem>
        </tree>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#grid">Grid</link></h1>
        <section>
            <grid rows="3" columns="3" label="Simple"/>
        </section>
        <section>
            <grid multiselectable="true" label="Multiselectable">
                <row><gridcell>1 — 1</gridcell><gridcell>1 — 2</gridcell><gridcell>1 — 3</gridcell></row>
                <row><gridcell>2 — 1</gridcell><gridcell>2 — 2</gridcell><gridcell>2 — 3</gridcell></row>
                <row><gridcell>3 — 1</gridcell><gridcell>3 — 2</gridcell><gridcell>3 — 3</gridcell></row>
            </grid>
        </section>
        <section>
            <grid rows="3" columns="3" disabled="true" label="Disabled"/>
        </section>
    </article>
    <article>
        <h1><link href="https://www.w3.org/TR/wai-aria-practices/#datepicker">Date picker</link></h1>
        <section>
            <datepicker label="Simple"/>
        </section>
    </article>
    <article class="mixes">
        <h1>Mixes</h1>
        <section>
            <button view="link">Button as link</button>
        </section>
        <section>
            <link href="//yandex.ru" mix="button">Link as button</link>
        </section>
        <section>
            <checkbox name="checkbox-button" value="on" view="button">Check button</checkbox>
        </section>
        <section>
            <group label="Check button group" view="buttongroup">
                <checkbox view="button">One</checkbox>
                <checkbox view="button">Two</checkbox>
            </group>
        </section>
        <section>
            <radiogroup name="radio-button-group" label="Radio button group" view="buttongroup" mix="radiobuttongroup">
                <radio view="button" value="first">One</radio>
                <radio view="button" value="second">Two</radio>
                <radio view="button" value="third">Three</radio>
            </radiogroup>
        </section>
        <section class="tabbuttongroupexample">
            <h1>Tab button group</h1>
            <tablist view="buttongroup">
                <tab controls="tabbuttonpanel1" view="button" selected="true">One</tab>
                <tab controls="tabbuttonpanel2" view="button">Two</tab>
                <tab controls="tabbuttonpanel3" view="button">Three</tab>
            </tablist>
            <group>
                <tabpanel id="tabbuttonpanel1">1</tabpanel>
                <tabpanel id="tabbuttonpanel2" hidden="true">2</tabpanel>
                <tabpanel id="tabbuttonpanel3" hidden="true">3</tabpanel>
            </group>
        </section>
        <section class="tabmenuexample">
            <h1>Tab menu</h1>
            <tablist view="tabmenu" mix="menu" controls="tabpanelgroup">
                <tab controls="tabpanelmenu1" selected="true" view="menuitem">One</tab>
                <tab controls="tabpanelmenu2" view="menuitem">Two</tab>
                <tab controls="tabpanelmenu3" view="menuitem">Three</tab>
            </tablist>
            <group id="tabpanelgroup">
                <tabpanel id="tabpanelmenu1">1</tabpanel>
                <tabpanel id="tabpanelmenu2" hidden="true">2</tabpanel>
                <tabpanel id="tabpanelmenu3" hidden="true">3</tabpanel>
            </group>
        </section>
    </article>
    <article>
        <h1>Spin</h1>
        <spin/>
    </article>
</main>
